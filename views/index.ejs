<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Voice Clone System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-5">
            <i class="fas fa-microphone-alt text-primary"></i>
            Doctor Voice Clone System
        </h1>

        <% if (message) { %>
            <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %> alert-dismissible fade show">
                <%= message.text %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="row">
            <!-- Voice Cloning Section -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5><i class="fas fa-user-md"></i> Step 1: Clone Doctor Voice</h5>
                    </div>
                    <div class="card-body">
                        <form action="/clone-voice" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label">Doctor Name</label>
                                <input type="text" class="form-control" name="doctorName" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description (Optional)</label>
                                <textarea class="form-control" name="description" rows="2"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Audio Recording (2-3 minutes)</label>
                                <input type="file" class="form-control" name="audioFile" accept="audio/*" required>
                                <div class="form-text">Upload clear audio recording of doctor speaking</div>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload"></i> Clone Voice
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Message Generation Section -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <h5><i class="fas fa-comment-medical"></i> Step 2: Generate Message</h5>
                    </div>
                    <div class="card-body">
                        <form action="/generate-message" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Select Doctor Voice</label>
                                <select class="form-select" name="voiceId" required>
                                    <option value="">Choose a cloned voice...</option>
                                    <% voiceClones.forEach(voice => { %>
                                        <option value="<%= voice.id %>"><%= voice.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Patient Name (Optional)</label>
                                <input type="text" class="form-control" name="patientName" placeholder="Patient name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Message Text</label>
                                <textarea class="form-control" name="messageText" rows="4" required 
                                    placeholder="Enter the message you want the doctor to say..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-success" 
                                    <%= voiceClones.length === 0 ? 'disabled' : '' %>>
                                <i class="fas fa-microphone"></i> Generate Voice Message
                            </button>
                            <% if (voiceClones.length === 0) { %>
                                <div class="form-text text-warning">Please clone a voice first</div>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cloned Voices List -->
        <% if (voiceClones.length > 0) { %>
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-list"></i> Cloned Voices</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% voiceClones.forEach(voice => { %>
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title"><%= voice.name %></h6>
                                        <p class="card-text small text-muted">
                                            <%= voice.description %><br>
                                            Created: <%= voice.createdAt.toLocaleDateString() %>
                                        </p>
                                        <form action="/delete-voice/<%= voice.id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    onclick="return confirm('Delete this voice clone?')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="text-center mt-4">
            <a href="/messages" class="btn btn-info">
                <i class="fas fa-history"></i> View All Messages
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>