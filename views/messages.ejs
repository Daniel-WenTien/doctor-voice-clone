<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Messages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-history"></i> All Voice Messages</h2>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Message
            </a>
        </div>

        <% if (audioMessages.length === 0) { %>
            <div class="text-center mt-5">
                <i class="fas fa-comment-slash fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No messages yet</h4>
                <a href="/" class="btn btn-primary mt-3">Create Your First Message</a>
            </div>
        <% } else { %>
            <div class="row">
                <% audioMessages.reverse().forEach(message => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    Dr. <%= message.voiceName %>
                                    <% if (message.patientName) { %>
                                        â†’ <%= message.patientName %>
                                    <% } %>
                                </h6>
                                <small class="text-muted">
                                    <%= message.createdAt.toLocaleDateString() %> 
                                    <%= message.createdAt.toLocaleTimeString() %>
                                </small>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>Message:</strong>
                                    <p class="mt-1">"<%= message.messageText.substring(0, 100) %><%= message.messageText.length > 100 ? '...' : '' %>"</p>
                                </div>
                                
                                <div class="mb-3">
                                    <audio controls class="w-100">
                                        <source src="<%= message.audioUrl %>" type="audio/mpeg">
                                    </audio>
                                </div>

                                <div class="text-center">
                                    <img src="<%= message.qrCode %>" alt="QR Code" style="max-width: 80px;">
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" value="<%= message.audioUrl %>" readonly>
                                    <button class="btn btn-outline-secondary" onclick="copyToClipboard('<%= message.audioUrl %>')">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                // Could add a toast notification here
                console.log('Link copied to clipboard');
            });
        }
    </script>
</body>
</html>